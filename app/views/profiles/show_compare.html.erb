<body style="background-image: url(<%= @champion.splash %>)" class="background">
	<div class="container container-fluid">
		<div class="container" id="graph_container">
			<div class="page-header">

		<h1><img height="90px" width="90px" src="<%= @champion.icon %>"><%= @champion.name %><small><%= @champion.title %></small><img style="z-index: -2; margin-right: -52px" src="/images/Champion_mastery_tier_<%= @champion_mastery[0]['championLevel'] %>.png" alt="" /><span style="z-index: 1; color: black"><%= @champion_mastery[0]['championLevel'] %></span></h1>

			</div>
			<div>
				<form action='/profiles/compare' class='navbar-form navbar-right' method='post' role="search">
					<div class="form-group">
						<input type='hidden' name="authenticity_token" value="<%= form_authenticity_token %>">
						<input type='hidden' name='summonerName' value='<%= @profile['summonerName'] %>'>
						<input type="hidden" name="championName" value="<%= @champion['name'] %>">
						Compare against another summoner:<br> (*currently unavailable) <input class='form-control form-control-block' name='profile[summonerName]' type='text' placeholder='Summoner Name' required></h3>
							<select class='form-control form-control-block' name='profile[region]' required>
								<option value='' selected disabled>Region</option>
								<option value="br">BR</option>
								<option value="eune">EUNE</option>
								<option value="euw">EUW</option>
								<option value="jp">JP</option>
								<option value="kr">KR</option>
								<option value="lan">LAN</option>
								<option value="las">LAS</option>
								<option value="na">NA</option>
								<option value="oce">OCE</option>
								<option value="ru">RU</option>
								<option value="tr">TR</option>
							</select>
						<button type="submit" class="btn btn-default"><span class='glyphicon glyphicon-search'> </span></button>
					</div>
				</form>
				<!-- @goals.map { |goal|
				{name: goal.name, data: goal.feats.group_by_week(:created_at).count}
				} -->

				<%= line_chart Match.group(:profile_id).group(:masteryPoints).maximum(:mdScore), discrete: true, label: "Kills", xtitle: "Champion Mastery Points", ytitle: "Kills" %>
			</div>
		</div>
	</div>

</body>
